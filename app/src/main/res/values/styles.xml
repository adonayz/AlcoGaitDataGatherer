<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#AC2B37</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolTipLayoutCustomStyle">
        <item name="ttlm_padding">20dip</item>
        <item name="ttlm_strokeColor">#B5000000</item>
        <item name="ttlm_backgroundColor">#B5000000</item>
        <item name="ttlm_strokeWeight">2dip</item>
        <item name="ttlm_cornerRadius">8dip</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayCustomStyle</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>

    <style name="ToolTipOverlayCustomStyle">
        <item name="android:color">#0000</item>
        <item name="ttlm_repeatCount">999</item>
        <item name="ttlm_duration">400</item>
    </style>

    <style name="ToolTipLayoutDefaultStyle.CustomFont" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_font">fonts/at.ttc</item>
    </style>

    <style name="AppCompatBarStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
